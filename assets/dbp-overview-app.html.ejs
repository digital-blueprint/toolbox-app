            }
            console.log('view_filters()');
        }
    </script>

    <!-- App bundles-->
    <script type="module">
        import {init} from "<%= getUrl(name + '.js') %>";

        let typesenseConfig = {
            host: '<%= typesense.host %>',
            port: '<%= typesense.port %>',
            protocol: '<%= typesense.protocol %>',
            key: '<%= typesense.key %>'
        };
        const privatePath = '<%= getPrivateUrl('')%>';

        init(typesenseConfig, {active: false, range: 86400}, privatePath);

        function filter_changed() {
            const dateFilter = {
                active: document.getElementById('filter-changed').checked,
                range: document.getElementById('timespan').value,
            };
            console.log('filter_changed()');
            console.dir(dateFilter);
            init(typesenseConfig, dateFilter, privatePath);
        }
        document.getElementById('filter-changed').onchange = filter_changed;
        document.getElementById('timespan').onchange = filter_changed;

        // show/hide facet list by clicking on caption
        const captions = Array.from(document.getElementsByClassName("filter-heading"));
        captions.forEach(function (caption) {
            const ul = document.getElementById(caption.dataset.target);
            const div = document.getElementById(caption.dataset.chevron);
            if (typeof ul !== 'undefined') {
                caption.onclick = () => {
                    ul.style.display = ul.style.display === 'none' ? 'block' : 'none';
                    if (typeof div !== 'undefined') {
                        if (ul.style.display === 'none') {
                            div.classList.remove('open');
                        } else {
                            div.classList.add('open');
                        }
                    }
                }
            }
            const status = caption.dataset.status;
            if (typeof status !== 'undefined') {
                if (status === 'open') {
                    ul.style.display = 'block';
                    div.classList.add('open');
                } else {
                    ul.style.display = 'none';
                    div.classList.remove('open');
                }
            }
        });

        // slider
        function setupSlider() {
            const navs = Array.from(document.getElementsByClassName("slider-nav"));
            //console.dir(navs);
            navs.forEach(function (nav) {
                //console.log('setup onclick for nav: ' + nav.id);
                const id = nav.id.replace('slider-nav-', '');
                nav.onclick = () => {
                    const allSlides = Array.from(document.getElementsByClassName('slide-item'));
                    allSlides.forEach(elm => elm.classList.remove('selected'));
                    document.getElementById('slide-' + id).classList.add('selected');
                    const allNavs = Array.from(document.getElementsByClassName('slider-nav'));
                    allNavs.forEach(elm => elm.classList.remove('selected'));
                    document.getElementById('slider-nav-' + id).classList.add('selected');
                }
            });
        }
        window.setupSlider = setupSlider;

    </script>

